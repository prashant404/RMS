<style>
  .students-list {
    margin-top: 30px;
  }

  .table-responsive {
    border: 1px solid #e0e0e0;
    border-radius: 5px;
    padding: 15px;
  }

  .table {
    border-collapse: collapse;
    width: 100%;
    border: 1px solid #ccc;
  }

  .table th, .table td {
    padding: 10px;
    text-align: center;
  }

  .table th {
    background-color: #bdd8f3;
  }

  .table tr:nth-child(even) {
    background-color: #a3adc6;
  }

  .table a {
    text-decoration: none;
    color: #333;
  }

  .table a:hover {
    color: #007bff;
  }

</style>

<div class="students-list">
 
  <h1 class="text-center" style="margin-top: 30px;">Student List</h1>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">Roll No.</th>
          <th scope="col">Name</th>
          <th scope="col">Maths</th>
          <th scope="col">English</th>
          <th scope="col">Science</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% student.forEach(student => { %>
          <tr>
            <td><%= student.roll %></td>
            <td><%= student.name %></td>
            <td><%= student.math %></td>
            <td><%= student.english %></td>
            <td><%= student.science %></td>
            <td>
              <a href="/teacher/edit/<%= student._id %>">
                <img src="https://img.icons8.com/material-outlined/30/000000/edit.png" alt="Edit Icon" style="margin: 0px 5px;">
              </a>
              <a href="/teacher/delete/<%= student._id %>">
                <img src="https://img.icons8.com/ios-glyphs/30/000000/filled-trash.png" alt="Delete Icon" style="margin: 0px 5px;">
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

